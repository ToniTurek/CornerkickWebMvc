        sTrInd[3] = "+"; // Duel off.
        sTrInd[4] = "+"; // Duel def.
        sTrInd[5] = "+"; // Low pass
        sTrInd[6] = "+"; // High pass
      } else if (tr.iId == 10) { // Soccer-tennis
        sTrInd[2] = "+"; // Technic
        sTrInd[8] = "+"; // Header
      } else if (tr.iId == 11) { // Header
        sTrInd[8] = "+++"; // Header
      } else if (tr.iId == 12) { // Yoga
        sTrInd[2] = "+"; // Technic
