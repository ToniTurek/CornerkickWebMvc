@model CornerkickWebMvc.Models.RegisterViewModel
@{
  ViewBag.Title = "Registrieren";
}

<h2>@ViewBag.Title.</h2>

@using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) {
    @Html.AntiForgeryToken()
    <h4>Neues Konto erstellen.</h4>
    <hr />
    @Html.ValidationSummary("", new { @class = "text-danger" })
    <div class="form-group">
        @Html.LabelFor(m => m.Email, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Email, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Vorname, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Vorname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.Nachname, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.TextBoxFor(m => m.Nachname, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.Verein, new { @class = "col-md-2 control-label" })
      <div class="col-md-10">
        @Html.TextBoxFor(m => m.Verein, new { @class = "form-control" })
      </div>
    </div>
    <div class="form-group">
      <label class="col-md-2 control-label" for="Wappen">Wappen (nur .png)</label>
      <div class="col-md-10">
        @Html.TextBox("file", "", new { @class = "form-control", type = "file", accept = "*.png" }) <br/>
      </div>
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.Land, new { @class = "col-md-2 control-label" })
      <div class="col-md-10">
        @Html.DropDownListFor(m => m.Land, CornerkickWebMvc.Models.RegisterViewModel.ltLand, new { @class = "form-control", @disabled = "disabled" })
      </div>
    </div>
    <div class="form-group">
      @Html.LabelFor(m => m.Liga, new { @class = "col-md-2 control-label" })
      <div class="col-md-10">
        @Html.DropDownListFor(m => m.Liga, CornerkickWebMvc.Models.RegisterViewModel.ltSpKl, new { @class = "form-control", @disabled = "disabled" })
      </div>
    </div>
    if (MvcApplication.settings.bRegisterDuringGame && MvcApplication.ckcore.dtDatum.CompareTo(MvcApplication.ckcore.dtSeasonStart) > 0) {
      <div class="form-group">
        @Html.LabelFor(m => m.iClubIx, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
          @Html.DropDownListFor(m => m.iClubIx, CornerkickWebMvc.Models.RegisterViewModel.ltClubs, new { @class = "form-control" })
        </div>
      </div>
    }
    <div class="form-group">
        @Html.LabelFor(m => m.Password, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.Password, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
        @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-2 control-label" })
        <div class="col-md-10">
            @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control" })
        </div>
    </div>
    <div class="form-group">
      <div class="col-md-offset-2 col-md-10">
        @{
          if (MvcApplication.ckcore.dtDatum.Date.Equals(MvcApplication.ckcore.dtSeasonStart.Date) ||
              MvcApplication.ckcore.dtSeasonStart.Year < 1000 ||
              MvcApplication.settings.bRegisterDuringGame) {
            <input type="submit" class="btn btn-default" value="Registrieren" />
          } else {
            <input type="submit" class="btn btn-default" disabled="disabled" value="Registrieren" />
          }
        }
      </div>
    </div>
}

@section Scripts {
  @Scripts.Render("~/bundles/jqueryval")
}
