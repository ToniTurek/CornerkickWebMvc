@model CornerkickWebMvc.Models.RemoveUserViewModel

@{
  ViewBag.Title = "Karriere beenden";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Bist du sicher?</h2>

@using (Html.BeginForm("RemoveUser", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form", enctype = "multipart/form-data" })) {
  @Html.AntiForgeryToken()
  <h4>Alle deine persönlichen Daten gehen verloren.</h4>
  <hr />
  @Html.ValidationSummary("", new { @class = "text-danger" })
  <div class="form-group">
    <div class="col-md-offset-2 col-md-10">
      <input type="submit" class="btn btn-default" value="Karriere beenden" />
    </div>
  </div>
}
