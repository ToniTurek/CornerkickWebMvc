@model CornerkickWebMvc.Models.StatisticModel

@{
  ViewBag.Title = "Statistik";
  Layout = "~/Views/Shared/_Layout.cshtml";
}

<!DOCTYPE html>
<html>
<head>
  <meta name="viewport" content="width=device-width" />
  <title>Statistik</title>

  <link href="~/Content/DataTables/css/jquery.dataTables.min.css" rel="stylesheet" />
  <script type="text/javascript" src="~/Scripts/DataTables/jquery.dataTables.min.js"></script>
  <script type="text/javascript" src="~/Scripts/Player.js"></script>
  <script type="text/javascript" src="~/Scripts/Formation.js"></script>

  <script type="text/javascript">
    $(document).ready(function () {
      var ddlStatNations   = $('#ddlStatNations');
      var ddlStatFormation = $('#ddlStatFormation');

      $("#rbProfi").on('change', function (ev) {
        drawBest11();
      });

      $("#rbJouth").on('change', function (ev) {
        drawBest11();
      });

      ddlStatNations.change(function () {
        drawBest11();
      });

      ddlStatFormation.change(function () {
        drawBest11();
      });

      drawBest11();

      var dtTeams = $('#tblTeams').DataTable({
        "ajax": {
          "url": '@Url.Action("StatisticGetTableTeams", "Member")',
          "type": 'POST',
          "data": function (d) {
            d.iLand = $('#ddlStatLeagues').val();
          }
        },
        "searching": true,
        "paging": false,
        "info": false,
        "pageLength": 20,
        "order": [[3, "desc"]],
        "columns": [
          { "data": "iIx", "className": "dt-center" },
          { "data": "iTeamId" },
          {
            "data": "sTeamName",
            "render": function (data, type, row) {
              return '@Html.ActionLink("name", "ClubDetails", "Member", new { iClub = "id" }, new { target = "" })'.replace("name", data).replace("id", row.iTeamId);
            },
            "className": "dt-center"
          },
          { "data": "sTeamAveSkill", "className": "dt-center" },
          { "data": "sTeamAveAge", "className": "dt-center" },
          { "data": "sTeamValueTotal", "className": "dt-right" },
          { "data": "nPlayer", "className": "dt-center" },
          { "data": "sTeamAveSkill11", "className": "dt-center" },
          { "data": "sTeamAveAge11", "className": "dt-center" },
          { "data": "sTeamValueTotal11", "className": "dt-right" },
          { "data": "sLeague", "className": "dt-center" }
        ],
        columnDefs: [
          {
            targets: [0, 1],
            "visible": false,
            "searchable": false
          }
        ]
      });

      $('#ddlStatLeagues').change(function () {
        dtTeams.ajax.reload();
      });
    
      $('#tblStatisticTransfers').DataTable({
        "ajax": {
          "url": '@Url.Action("StatisticGetTransferTable", "Member")',
          "type": 'GET',
          "dataType": "JSON",
          "cache": false,
          "contentType": "application/json; charset=utf-8"
        },
        "columns": [
          { "data": "iIx" },
          { "data": "sPlayerName" },
          { "data": "sTransferFee" },
          {
            "data": "iValue",
            render: $.fn.dataTable.render.number('.', ',', 0, '')
          },
          { "data": "sClubTakeName" },
          { "data": "sClubGiveName" },
          { "data": "sDt" }
        ],
        "language": {
          "emptyTable": "Keine Transfers"
        },
        "pageLength": 10,
        "paging": false,
        "info": false,
        "responsive": false,
        "searching": false,
        "select": false,
        "order": [[2, "desc"]],
        "columnDefs": [
          {
            "targets": [0], // iIx
            "orderable": false,
            "visible": false,
            "searchable": false
          },
          { "targets": [1, 4, 5, 6], "className": "dt-center" },
          { "targets": [2, 3], "className": "dt-right" }
        ]
      });
    });

    function drawBest11() {
      var bJouth = document.getElementById("rbJouth").checked;
      var ddlStatNations   = $('#ddlStatNations');
      var ddlStatFormation = $('#ddlStatFormation');
      // end declarations

      iNation    = ddlStatNations  .val();
      iFormation = ddlStatFormation.val();

      $.ajax({
        cache: false,
        url: "/Member/StatisticGetBest11",
        type: "GET",
        data: { iNat: iNation, iF: iFormation, bJouth: bJouth },
        success: function (teamData) {
          if (teamData) { // check if data is defined
            var bMobile = $(window).width() < 960;
            var result = "";
            var drawFormation = $("#drawFormation");

            $.each(teamData.ltPlayer, function (i, player) {
              result += getBoxFormation(i, teamData.formation.ptPos[i], player.sName, player.iNr.toString(), teamData.ltPlayerAveSkill[i], false, false, -1, teamData.ltPlayerPos[i], bMobile, 0.5, teamData.ltPlayerTeamname[i], teamData.ltPlayerAge[i], teamData.ltPlayerNat[i]);

              return i !== 11;
            });

            drawFormation.html(result).fadeIn('slow');

            var txtStatAverage = $("#txtStatAverage");
            txtStatAverage.html("Durchschnittsstärke (-alter): " + teamData.fTeamAveStrength.toFixed(2) + " (" + teamData.fTeamAveAge.toFixed(1) + ")");
          } else {
            alert("data hasn't worked!");
          }
        }
      });
    }
  </script>
</head>

<body>
  <h3>Beste Spieler</h3>
  <div style="position: relative; width: 160px; height: auto; margin-bottom: 6px">
    @Html.DropDownListFor(m => m.iNation, Model.ddlNations, new { @Id = "ddlStatNations", @class = "form-control" })
  </div>

  <div class="image" id="divFieldContainer" style="position: relative; width: 70%; min-width: 360px; margin-bottom: 6px">
    <img style="position: relative; width: 100%" src="~/Content/Images/stadium/field.png" />
    <div style="position: absolute; margin-left: 5%; width: 90%; height: 94%; top: 0px; left: 0%">
      <div id="drawFormation" style="position: absolute; width: 100%; height: 100%; top: 0%; left: 0%"></div>
    </div>
    <div align="center" style="position: absolute; top: 2px; width: 100%">
      <div style="position: relative; width: 300px; height: 30px; top: -15px; background-color: white; border: 2px solid black; -webkit-border-radius: 10px; -moz-border-radius: 10px">
        <form>
          <fieldset>
            <label style="font-size:140%; color: black; margin-right: 4%">
              <input type="radio" id="rbProfi" name="rbProfiJouth" value="0" checked>
              Profis
            </label>
            <label style="font-size:140%; color: black">
              <input type="radio" id="rbJouth" name="rbProfiJouth" value="1">
              U18
            </label>
          </fieldset>
        </form>
      </div>
    </div>

    <b id="average" style="position: absolute; bottom: 0%; left: 0%; width: 100%; text-align:center; font-size:130%; color:white"></b>
  </div>

  <div style="position: relative; width: 120px; height: auto">
    @Html.DropDownListFor(m => m.sFormation, Model.ltsFormations, new { @Id = "ddlStatFormation", @class = "form-control" })
  </div>
  <text id="txtStatAverage" style="position: relative; width: 100%"></text>

  <div style="position: relative">
    <h3 style="position: relative; margin-top: 30px">Mannschaftsübersicht</h3>
    <div style="position: relative; width: 160px; height: auto; z-index: 99">
      <b class="left">Liga:</b>
      @Html.DropDownListFor(m => m.iLeague, Model.ddlLeagues, new { @Id = "ddlStatLeagues", @class = "form-control" })
    </div>

    <div style="position: relative; width: 100%; top: -30px">
      <table id="tblTeams" cellspacing="0" style="width: 100%" class="display responsive nowrap">
        <thead>
          <tr>
            <th>#</th>
            <th>ID</th>
            <th>Team</th>
            <th>&#8709;-Stärke</th>
            <th>&#8709;-Alter</th>
            <th>&#8709;-MW</th>
            <th>Spieler</th>
            <th>&#8709;-Stärke Startelf</th>
            <th>&#8709;-Alter Startelf</th>
            <th>&#8709;-MW Startelf</th>
            <th>Liga</th>
          </tr>
        </thead>
        <tbody>
          <!---Data and tags are dynamically generated--->
        </tbody>
      </table>
    </div>
  </div>

  <div style="position: relative">
    <h3 style="position: relative; margin-top: 30px">Rekordtransfers</h3>

    <div style="position: relative; width: auto; top: 0px">
      <table id="tblStatisticTransfers" cellspacing="0" style="width: auto" class="display responsive nowrap">
        <thead>
          <tr>
            <th>#</th>
            <th>Spieler</th>
            <th>Ablöse [€]</th>
            <th>Marktwert [€]</th>
            <th>Aufn. Verein</th>
            <th>Abg. Verein</th>
            <th>Datum</th>
          </tr>
        </thead>
        <tbody>
          <!---Data and tags are dynamically generated--->
        </tbody>
      </table>
    </div>
  </div>
</body>
</html>
